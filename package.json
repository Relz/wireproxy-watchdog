{
  "name": "wireproxy-watchdog",
  "version": "1.0.0",
  "description": "A watchdog service for wireproxy with automatic configuration rotation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "npm run format:check && npm run lint"
  },
  "keywords": [
    "wireproxy",
    "watchdog",
    "wireguard",
    "proxy"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "https-proxy-agent": "^7.0.6",
    "reflect-metadata": "^0.2.2",
    "tree-kill": "^1.2.2",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
